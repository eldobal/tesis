<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor"
    tools:context=".register2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <ImageButton
                android:id="@+id/imgperfil"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:background="@color/float_transparent"
                android:src="@drawable/userprofile" />






        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"

                android:scrollbarThumbVertical="@drawable/colorsroll">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    //rut

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:text="Rut" />


                    <ImageView
                        android:id="@+id/imgrut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        app:srcCompat="@android:drawable/sym_action_email" />

                    <EditText
                        android:id="@+id/rut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rut"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:text="Correo Electronico" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rut"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@android:drawable/sym_action_email" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rut"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:text="ContraseÃ±a" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPassword" />


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:text="Nombre" />

                    <EditText
                        android:id="@+id/nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_marginTop="-1dp"
                        app:srcCompat="@android:drawable/ic_menu_edit" />


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nombre"
                        app:srcCompat="@android:drawable/ic_menu_edit" />

                    <EditText
                        android:id="@+id/apellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombre"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nombre"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:text="Apellido" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/apellido"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:text="Telefono" />

                    <EditText

                        android:id="@+id/telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/apellido"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="phone" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/apellido"
                        app:srcCompat="@android:drawable/stat_sys_phone_call" />


                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/telefono"
                        android:layout_marginTop="30dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/telefono"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:text="Ciudad" />

                    <ImageView

                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/telefono"
                        app:srcCompat="@android:drawable/ic_dialog_map" />


                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/password"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/password"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:text="Confirma ContraseÃ±a" />

                    <EditText
                        android:id="@+id/password2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/password"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPassword" />


                </RelativeLayout>
            </ScrollView>


            <Button
                android:id="@+id/registrarse"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/botonripple"
                android:text="Registrarse"
                android:textColor="@drawable/botonpressed" />
        </RelativeLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
