<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccentllight"
    android:layout_height="match_parent"
    tools:context=".solicitudeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/txtmisoli"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/mydashboard"
                android:text="Mis Solicitudes"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="35sp"
                android:layout_marginLeft="62dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/txtmisoli"
            android:id="@+id/txtsolicitudactual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView

                android:id="@+id/cardcambiodepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="@color/colorAccentllight"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Solicitud Actual "
                        android:textSize="20sp"

                        android:gravity="center_horizontal"></TextView>



                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/txtsolicitudactual"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <RelativeLayout
                    android:id="@+id/cardcontacto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                 >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardtecnicoinformatico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:backgroundTint="@color/colorAccent"
                        android:clickable="true"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="6dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">


                            <ListView
                                android:id="@+id/listadosolicitudes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">




                            </ListView>






                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


            </GridLayout>


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>