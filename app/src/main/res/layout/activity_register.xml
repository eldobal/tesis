<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/bgcolor"
    tools:context=".registerActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10pt"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            >

            <ImageView
                android:layout_below="@id/txtpassword"
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@android:drawable/ic_lock_idle_lock" />

            <ImageButton
                android:layout_marginTop="10dp"
                android:id="@+id/imgperfil"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="50dp"
                android:clickable="true"

                android:src="@drawable/ic_launcher" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgperfil"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="12dp"
                android:text="Correo Electronico" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgperfil"
                android:layout_marginTop="5dp"
                app:srcCompat="@android:drawable/sym_action_email" />

            <EditText
                android:id="@+id/txtemail"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/imgperfil"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />






            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="5dp"
                app:srcCompat="@android:drawable/ic_lock_idle_lock" />

            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="12dp"
                android:text="Contraseña" />

            <EditText
                android:id="@+id/txtpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="textPassword" />



            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/txtemail"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/nombre"
                android:layout_below="@+id/txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtemail"
                android:layout_marginTop="-1dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />




            <Button
                android:id="@+id/btnregistrarse"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_below="@+id/password2"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11pt"
                android:layout_marginBottom="6pt"
                android:background="@drawable/botonripple"
                android:text="Registrarse"
                android:textColor="@drawable/botonpressed" />


            <ImageView
                android:layout_below="@id/nombre"
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <EditText
                android:layout_marginTop="30dp"
                android:layout_below="@+id/nombre"
                android:id="@+id/apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_below="@id/nombre"
                android:layout_marginLeft="40dp"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/apellido"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono" />

            <EditText

                android:layout_marginTop="30dp"
                android:layout_below="@+id/apellido"
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/apellido"
                app:srcCompat="@android:drawable/stat_sys_phone_call" />





            <Spinner
                android:layout_marginTop="30dp"
                android:layout_below="@+id/telefono"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/telefono"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad" />

            <ImageView

                android:layout_below="@id/telefono"
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_dialog_map" />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtpassword"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirma Contraseña" />

            <EditText
                android:layout_marginTop="30dp"
                android:layout_below="@+id/txtpassword"
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />


        </RelativeLayout

            >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono" />


    </LinearLayout>










</androidx.constraintlayout.widget.ConstraintLayout>

