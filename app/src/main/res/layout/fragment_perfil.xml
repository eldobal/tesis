<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccentllight"
    tools:context=".fragments.perfilFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadindots2"
                app:lottie_rawRes="@raw/loadinglistasolicitudes"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp">
            </com.airbnb.lottie.LottieAnimationView>



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/usericon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/float_transparent"
                android:layout_centerInParent="true"
                ></androidx.appcompat.widget.AppCompatImageView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="75dp"
                android:scrollbarThumbVertical="@drawable/colorsroll">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:textColor="@color/colordark"
                        android:textSize="19dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="7dp"
                        android:text="Rut" />


                    <ImageView
                        android:id="@+id/imgrut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        app:srcCompat="@android:drawable/sym_action_email" />

                    <EditText
                        android:id="@+id/rut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:clickable="false"
                        android:ems="10"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPersonName"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rut"
                        android:textColor="@color/colordark"
                        android:textSize="19dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="7dp"
                        android:text="Correo Electronico" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rut"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@android:drawable/sym_action_email" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorPrimaryDark"

                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rut"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />



                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:textColor="@color/colordark"
                        android:textSize="19dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="40dp"

                        android:text="Nombre" />

                    <EditText
                        android:id="@+id/nombre"
                        android:textColor="@color/colorPrimaryDark"
                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_marginTop="-1dp"
                        app:srcCompat="@android:drawable/ic_menu_edit" />


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nombre"
                        app:srcCompat="@android:drawable/ic_menu_edit" />

                    <EditText
                        android:id="@+id/apellido"
                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:focusableInTouchMode="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombre"
                        android:layout_marginTop="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nombre"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/colordark"
                        android:textSize="19dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginTop="7dp"
                        android:text="Apellido" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/apellido"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/colordark"
                        android:textSize="19dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginTop="7dp"
                        android:text="Telefono" />

                    <EditText
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/telefonoperfil"
                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/apellido"
                        android:layout_marginTop="31dp"
                        android:ems="10"
                        android:inputType="phone" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/apellido"
                        app:srcCompat="@android:drawable/stat_sys_phone_call" />


                    <Spinner
                        android:id="@+id/spinner"
                        android:textColor="@color/colorPrimaryDark"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/telefonoperfil"
                        android:layout_marginTop="30dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/telefonoperfil"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/colordark"
                        android:textSize="19dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginTop="7dp"
                        android:text="Ciudad" />

                    <ImageView

                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/telefonoperfil"
                        app:srcCompat="@android:drawable/ic_dialog_map" />





                </RelativeLayout>
            </ScrollView>



            <Button
                android:id="@+id/actualizarperfil"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/botonripple"
                android:text="Actualizar"
                android:textColor="@drawable/botonpressed" />

            <Button
                android:id="@+id/actualizarcontraseña"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="12dp"
                android:background="@drawable/botonripple"
                android:text="Actualizar Contraseña"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>







    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>